// *************************** INCLUDES ************************************ // 
#include "keyboard.h"

// ************************* SETUP MAIN PROGRAM **************************** //
uint8_t Clavier_MX(void)
{	
    static uint8_t Symbole_Clavier[4][4] = {
        {'1','2','3','A'},  // Row 0
        {'4','5','6','B'},  // Row 1
        {'7','8','9','C'},  // Row 2
        {'*','0','#','D'}   // Row 3
    };
    static uint8_t Ch_Front = 1;
	for (int ligne = 1; ligne < 5; ligne++){
		// Lire les colonnes (entrÃ©e)
		for (int col = 1; col < 5; col++){
            Ecrire_I2C(0x01 << (col -1));
			char AAA = Lire_I2C()
    HAL_UART_Transmit(&huart1, &AAA, 1, 1);
			HAL_Delay(5);
			if ((Lire_I2C() & 0xF0) > 0){
				if (Ch_Front == 1){
					Ch_Front = 0;
					return Symbole_Clavier[col-1][ligne-1];
				}
				else{			
					return 0; // aucune touche
				}
			}
			HAL_Delay(5);	
		}
	}	
	Ch_Front = 1;
    return 0; // aucune touche
}
