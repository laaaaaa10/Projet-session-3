// ************** INCLUDES ************** //
#include <UART_Com.h>

// ************** FUNCTION ************** //
void UART_Envoit(uint8_t M_0, uint8_t M_1, uint8_t M_2, uint8_t M_3, uint8_t M_4)
{
    uint8_t CheckSum;

    UART_STM('G');
    UART_STM('O');
    UART_STM(M_0);
    UART_STM(M_1);
    UART_STM(M_2);
    UART_STM(M_3);
    UART_STM(M_4);
    CheckSum = ('G' + 'O' + M_0 + M_1 + M_2 + M_3 + M_4 + 0x58);
    UART_STM(CheckSum);
}

void UART_STM(uint8_t V_TX)
{

    HAL_UART_Transmit(&huart1, &V_TX, 1, 1);
}
