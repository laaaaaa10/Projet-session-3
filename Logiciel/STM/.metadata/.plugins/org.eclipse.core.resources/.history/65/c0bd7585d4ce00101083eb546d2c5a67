uint8_t Clavier_MX(void)
{	
    uint8_t Symbole_CLAVIER[16] = 
			{'1','2','3','A',
			 '4','5','6','B',
		     '7','8','9','C',
			 '*','0','#','D'};

    uint8_t Data_Val = 0;
    uint8_t Ch_Front = 1;
    if (Ch_Front == 1){
        Data_Val = Lire_I2C();
        HAL_Delay(10);
        Ch_Front = 0;
	    return Symbole_CLAVIER[Dat_Val];
    }
    else{			
        return 0; // aucune touche
    }
	Ch_Front = 1;
    return 0; // aucune touche
}

